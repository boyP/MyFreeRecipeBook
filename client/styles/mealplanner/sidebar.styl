sidebar-color = white
subtitle-color = #BDBDBD

cool-font-weight = 300
sidebar-height = 700px

.row > .sidebar-container
  text-transform: capitalize
  min-height: sidebar-height
  box-shadow: 0 2px 2px 0 rgba(0, 0, 0, 0.14), 0 1px 5px 0 rgba(0, 0, 0, 0.12), 0 3px 1px -2px rgba(0, 0, 0, 0.2)

.sidebar
  height: 100%
  text-align: center
  margin: 20px
  color: sidebar-color

.sidebar-title
  color: sidebar-color
  font-size: 2em
  margin: 0px

.drag
  opacity: 0.5

// autocomplete
.meal-card:hover
   box-shadow: 0 0 10px 2px rgba(0, 140, 186, 0.5)

.meal-card
  background-color: white
  border-radius: 4px
  border: 1px solid #ddd
  padding: 5px
  text-align: initial
  color: black
  box-shadow: 0 0 2px 1px

.meal-image
  border: 1px solid #ddd
  border-radius: 4px
  padding: 2px
  height: 50px
  width: 100%
  background-color: white

div.meal-body
  margin: 2px 0px

div.meal-body > p
  margin: inherit
  font-weight: cool-font-weight

.meal-title:
  padding: 0px
  margin: 0px

.meal-subtitle
  font-size: 0.8em
  color: subtitle-color

#meal-delete-icon
  float: right

p.autocomplete-title
  padding-left: 0

.react-autosuggest__container
  position: relative

input.react-autosuggest__input
  font-weight: cool-font-weight

.react-autosuggest__input--focused
  outline: none

.react-autosuggest__input--open
  border-bottom-left-radius: 0
  border-bottom-right-radius: 0

.react-autosuggest__suggestions-container
  display: none
  margin: 0
  padding: 0
  text-align: left

.react-autosuggest__suggestions-container--open
  display: block
  position: absolute
  top: 51px
  width: 100%
  border: 1px solid #aaa
  background-color: #fff
  font-weight: cool-font-weight
  font-size: 16px
  border-bottom-left-radius: 4px
  border-bottom-right-radius: 4px
  z-index: 2

.react-autosuggest__suggestions-list
  margin: 0
  padding: 0
  list-style-type: none

.react-autosuggest__suggestion
  cursor: pointer
  margin: 0
  padding: 10px 5px

.react-autosuggest__suggestion--highlighted
  background-color: #ddd
